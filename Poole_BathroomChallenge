        bathroom2.advanceLine();

        System.out.println(bathroom1.getInsideBathroom());
        System.out.println(bathroom2.getInsideBathroom());

        System.out.println(bathroom1.findStudent(student1));
        System.out.println(bathroom1.findStudent(student7));
        System.out.println(bathroom2.findStudent(student1));
        System.out.println(bathroom1.findStudent(student5));

        bathroom1.studentExit(student1);
